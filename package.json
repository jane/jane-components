{
  "name": "jane-components",
  "description": "[WIP] Jane's open source component library",
  "version": "0.0.3",
  "author": "Jane web team",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "run-p -s build:*",
    "build:babel": "babel --ignore \"src/**/*.test.js\" src/ -d lib/",
    "build:rollup": "rollup -c",
    "copy-flow": "flow-copy-source src lib",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "cover:coveralls": "if [ -n \"$COVERALLS_REPO_TOKEN\" ] ; then coveralls < coverage/lcov.info ; fi || true",
    "docs": "styleguidist build",
    "format": "prettier \"{src,config}/**/*.js\" \"*.js\" --write && fixpack",
    "postbuild": "run-p -s docs copy-flow",
    "prebuild": "npm run test:build",
    "precommit": "lint-staged && fixpack",
    "preversion": "npm run build",
    "start": "styleguidist server",
    "test": "run-s -s test:flow test:lint test:jest",
    "test:build": "run-s -s test:lint cover cover:coveralls",
    "test:flow": "flow check",
    "test:jest": "node config/jest/test.js --env=jsdom",
    "test:lint": "eslint src config *.js",
    "update-types": "flow-typed update-cache && flow-typed install -o -i dev"
  },
  "homepage": "https://jane.github.io/jane-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/jane/jane-components.git"
  },
  "bugs": "https://github.com/jane/jane-components/issues",
  "keywords": [
    "components",
    "jane",
    "jane-components",
    "react"
  ],
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "23.4.2",
    "babel-loader": "7.1.5",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-styled-name": "2.0.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "coveralls": "3.0.2",
    "enzyme": "3.4.0",
    "enzyme-adapter-react-16": "1.2.0",
    "eslint": "5.3.0",
    "eslint-plugin-jane": "0.1.10",
    "fixpack": "2.3.1",
    "flow-bin": "0.78.0",
    "flow-copy-source": "2.0.2",
    "flow-typed": "2.5.1",
    "husky": "0.14.3",
    "jest": "23.4.2",
    "jest-styled-components": "5.0.1",
    "lint-staged": "7.2.0",
    "mq-polyfill": "1.1.8",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.1",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-styleguidist": "7.2.1",
    "rollup": "0.64.1",
    "rollup-plugin-babel": "3.0.7",
    "rollup-plugin-commonjs": "9.1.4",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "styled-components": "3.4.2",
    "webpack": "4.16.5"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^(?!.*\\.(js|json)$)": "<rootDir>/config/jest/file-transform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "dist/*.js",
      "lib/**/*.js",
      "docs/**/*.js"
    ]
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "styled-components": "^3.0.0"
  }
}
